<body class = "new-session">
<%= render "devise/shared/header" %>

<section class="vh-100 bg-image">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <div class="mb-md-5 mt-md-4 pb-5">
              <%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
              <h2 class="fw-bold mb-2 text-uppercase">ログイン</h2>
              <%# <p class="text-white-50 mb-5">Please enter your login and password!</p> %>

              <div data-mdb-input-init class="form-outline mb-4">
                <label class="form-label" for="typeEmailX">メールアドレス</label>
                <input type="email" id="typeEmailX" class="form-control form-control-lg" />
              </div>

              <div data-mdb-input-init class="form-outline mb-4">
                <label class="form-label" for="typePasswordX">パスワード</label>
                <input type="password" id="typePasswordX" class="form-control form-control-lg" />
              </div>

              <p class="small mb-5 pb-lg-2"><a class="text-white-50" href="#!">Forgot password?</a></p>

                <div class = "have-account">
                <p class="text-center text-muted mt-5 mb-0">
                  アカウントをお持ちでない場合は
                  <%=link_to 'サインイン', new_user_registration_path, class:"fw-bold text-body" %>
                  してください </p>
                </div>

                <div class='login-btn'>
                  <%= f.submit "ログイン" ,class:"light-blue-btn" %>
                </div>
              <% end %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
</body>