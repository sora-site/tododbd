<body class = "new-session">
<%= render "devise/shared/header" %>

<section class="vh-100 bg-image"
  style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="login-form-wrapper card-body p-5">
              <h2 class="text-uppercase text-center mb-5">ログイン</h2>

            <div class="mb-md-5 mt-md-4 pb-5">
              <%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
              <div data-mdb-input-init class="form-outline mb-4">
                <label class="form-label" for="typeEmailX">メールアドレス</label>
                <%= f.email_field :email, class:"form-control form-control-lg", id:"typeEmailX", placeholder:"", autofocus: true %>
              </div>

              <div data-mdb-input-init class="form-outline mb-4">
                <label class="form-label" for="typePasswordX">パスワード</label>
                <%= f.password_field :password, class:"form-control form-control-lg", id:"typePasswordX", placeholder:"" %>
              </div>

              <p class="small mb-5 pb-lg-2"><a class="text-white-50" href="#!">Forgot password?</a></p>

                <div class = "have-account">
                <p class="text-center text-muted mt-5 mb-0">
                  アカウントをお持ちでない場合は
                  <%=link_to 'サインイン', new_user_registration_path, class:"fw-bold text-body" %>
                  してください </p>
                </div>

                <div class='login-btn'>
                  <%= f.submit "ログイン" ,class:"light-blue-btn" %>
                </div>
              <% end %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
</body>