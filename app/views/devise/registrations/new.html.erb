<body class = "new-registration">

<%= render "devise/shared/header" %>

<section class="vh-100 bg-image"
  style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="signup-form-wrapper card-body p-5">
              <h2 class="text-uppercase text-center mb-5">新規登録</h2>

              <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>

                <div data-mdb-input-init class="form-outline mb-4">
                  <label class="form-label" for="form3Example1cg">お名前</label>
                  <%= f.text_area :nickname, class:"form-control form-control-lg", id:"form3Example1cg", placeholder:"ニックネーム可（最大16文字）", maxlength:"16" %>
                </div>

                <div data-mdb-input-init class="form-outline mb-4">
                  <label class="form-label" for="form3Example3cg">メールアドレス</label>
                  <%= f.email_field :email, class:"form-control form-control-lg", id:"form3Example3cg", placeholder:"PC・携帯どちらでも可", autofocus: true %>
                </div>

                <div data-mdb-input-init class="form-outline mb-4">
                  <label class="form-label" for="form3Example4cg">パスワード</label>
                  <%= f.password_field :password, class:"form-control form-control-lg", id:"form3Example4cg", placeholder:"8文字以上の半角英数字で入力してください" %>
                </div>

                <div data-mdb-input-init class="form-outline mb-4">
                  <label class="form-label" for="form3Example4cdg">パスワード確認用</label>
                  <%= f.password_field :password_confirmation, class:"form-control form-control-lg", id:"form3Example4cdg", placeholder:"同じパスワードを入力して下さい" %>
                </div>

                <div data-mdb-input-init class="form-outline mb-4">
                  <label class="form-label" for="form3Example4cdg">生年月日</label>
                  <div class='input-birth-wrap'>
                  <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
                  </div>
                </div>

                <%# <div class="d-flex justify-content-center">
                  <button  type="button" data-mdb-button-init
                    data-mdb-ripple-init class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">新規登録</button>
                </div> %>

                <div class = "have-account">
                <p class="text-center text-muted mt-5 mb-0">
                  すでにアカウントをお持ちの場合は
                  <%=link_to 'ログイン', new_user_session_path, class:"fw-bold text-body" %>
                  してください </p>
                </div>

                <div class='register-btn'>
                  <%= f.submit "会員登録" ,class:"light-blue-btn" %>
                </div>

              <% end %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
</body>